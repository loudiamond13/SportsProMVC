@model X.PagedList.IPagedList<Technician>

@{
    ViewBag.Title = "Technician Manager";
}

<h2 class="my-2">@ViewBag.Title</h2>

<div class="mb-3 d-flex justify-content-between">
    @*Technician Add button*@
    <a class="btn btn-outline-primary" asp-controller="Technician" asp-action="Add">Add Technician</a>
    @* search bar *@
    <form asp-action="List" method="get" asp-controller="Technician" class="w-50 form-floating">
        <div class="input-group">
            <input type="text" class="form-control me-1" name="search" value="@ViewBag.search" placeholder="Search..." />
            <button class="btn btn-outline-primary" type="submit">Search</button>
           
        </div>
    </form>
</div>

<table class="table table-bordered table-striped shadow">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th></th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (Technician technician in Model)
        {
            <tr>
                <td>@technician.FullName</td>
                <td>@technician.Email</td>
                <td>@technician.Phone</td>

                @*Technician Edit button*@
                <td>
                    <a class="btn btn-outline-primary" 
                        asp-controller="Technician" asp-action="Edit"
                        asp-route-id="@technician.TechnicianID" >
                        Edit
                    </a>
                </td>

                @*Technician Delete button*@
                <td>
                   @*  <a class="btn btn-outline-danger"
                       asp-controller="Technician" asp-action="Delete"
                       asp-route-id="@technician.TechnicianID">
                        Delete
                    </a> *@
                    <form method="post" asp-action="Delete" asp-controller="Technician" id="deleteTech_@technician.TechnicianID" onsubmit="deleteTech(event, @technician.TechnicianID)">
                        <input hidden value="@technician.TechnicianID" name="technicianID"/>
                        <button type="submit" class="btn btn-outline-danger">Delete</button>
                    </form>
                </td>
            </tr>

        }
    </tbody>
</table>

@* Pagination *@
<div>
    @if (Model.PageCount > 1)
    {
        <nav aria-label="Page navigation" class="d-flex justify-content-center">
            <ul class="pagination">
                @for (var i = 1; i <= Model.PageCount; i++)
                {
                    <li class="page-item @(Model.PageNumber == i ? "active" : "")">
                        <a class="page-link" href="@Url.Action("List", "Technician", new {page = i, search = ViewBag.search})">@i</a>
                    </li>
                }
            </ul>
        </nav>    
    }
</div>


@section Scripts 
{
    <script>
        function deleteTech(event, technicianID) {
            event.preventDefault();

            Swal.fire({
                title: "Are you sure you want to delete this technician?",
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, delete it'
            }).then(result => {
                if (result.isConfirmed) { 
                    document.getElementById('deleteTech_' + technicianID).submit();
                }
            });
        }
    </script>
}