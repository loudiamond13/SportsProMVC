@model Customer
@{
    ViewData["title"] = "Registrations";
}

<h1>Get Customer</h1>
<form asp-action="List" method="post" asp-controller="Registration">
    <select class="form-control select2 w-50" asp-for="CustomerID"
        asp-items="@(new SelectList(ViewBag.Customers, "CustomerID", "FullName", Model.CustomerID.ToString()))">
        <option value="0">Select A Customer...</option>
    </select>
    <input type="hidden" asp-for="CustomerID" />
    <div class="mt-2">
        <button type="submit" class="btn btn-primary mt-2">Select</button>
    </div>
</form>

@section Scripts{
    <script>
        //makes the jquery select2 function/work
        $(document).ready(function () {
            $('.select2').select2();
        });
    </script>
}