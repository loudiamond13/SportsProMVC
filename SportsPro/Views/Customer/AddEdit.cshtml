@model Customer

@{
    ViewBag.Title = ViewBag.Action + "Customer";
}



@*Customer Add or Edit Form*@
<div class="container">
    <h1>@ViewBag.Action Customer</h1>
    <form method="post" asp-controller="Customer" asp-action="AddEdit">
        @*<div class="text-danger" asp-validation-summary="All"></div>*@

        <div class="row">
            <div class="col-md-6">
                <div class="form-floating mt-2">
                    <input class="form-control" asp-for="FirstName" required placeholder="First Name:" />
                    <label asp-for="FirstName" class="form-label">First Name:</label>
                    <span class="text-danger" asp-validation-for="FirstName"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-floating mt-2">
                    <input class="form-control" asp-for="LastName" required placeholder="Last Name:" />
                    <label asp-for="LastName" class="form-label">Last Name:</label>
                    <span class="text-danger" asp-validation-for="LastName"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class=" mt-2 form-floating">
                    <input class="form-control" asp-for="Email" placeholder="Email:" required type="email" />
                    <label class="col-sm-3" asp-for="Email">Email:</label>
                    <span class="text-danger" asp-validation-for="Email"></span>

                </div>
            </div>
            <div class="col-md-6">
                <div class=" mt-2 form-floating">
                    <input placeholder="(000) 000-0000" class="form-control" required asp-for="Phone" />
                    <label class="col-sm-3" asp-for="Phone">Phone:</label>
                    <span class="text-danger" asp-validation-for="Phone"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class=" form-floating mt-2">
                    <input class="form-control" asp-for="Address" placeholder="Address:" />
                    <label class="col-sm-3" asp-for="Address">Address:</label>
                    <span class="text-danger" asp-validation-for="Address"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class=" form-floating mt-2">
                    <input class="form-control" asp-for="City" placeholder="City:" />
                    <label class="col-sm-3" asp-for="City">City:</label>
                    <span class="text-danger" asp-validation-for="City"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class=" mt-2 form-floating">
                    <input class="form-control" asp-for="State" required placeholder="State:" />
                    <label class="col-sm-3" asp-for="State">State:</label>
                    <span class="text-danger" asp-validation-for="State"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class=" mt-2 form-floating">
                    <input class="form-control" type="number" asp-for="PostalCode" required placeholder="Postal Code:" />
                    <label class="col-sm-3" asp-for="PostalCode">Postal Code:</label>
                    <span class="text-danger" asp-validation-for="PostalCode"></span>
                </div>
            </div>
        </div>


        <div class="row mt-2 ">
            <div class="col-md-6 form-floating">
                <select class="form-control" asp-for="CountryID"
                        asp-items="@(new SelectList(
                ViewBag.Countries, "CountryID", "Name", Model ))">

                    <option value="">Select A Country...</option>
                </select>
                <label class="col-sm-3" asp-for="CountryID">Country:</label>
                <span class="text-danger" asp-validation-for="CountryID"></span>
            </div>
        </div>

        <input hidden  asp-for="CustomerID" />

        <div class="mt-3">
            <button class="btn btn-primary" type="submit">Save</button>
            <a class="btn btn-primary" asp-controller="Customer" asp-action="List">Cancel</a>

        </div>
    </form>
</div>