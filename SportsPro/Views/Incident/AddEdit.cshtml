@model Incident

@{
    ViewBag.Title = ViewBag.Action + " Incident";
}



<div class="container">
    <h1>@ViewBag.Title</h1>
    <form method="post" asp-controller="Incident" asp-action="AddEdit" class="my-4">
        <div class="row mb-3">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="CustomerID">Customer:</label>
                    <select asp-for="CustomerID" class="form-control select2"
                            asp-items="@(new SelectList(
                                ViewBag.Customers, "CustomerID", "FullName", Model.CustomerID.ToString() ))">
                        <option value="">Select A Customer...</option>
                    </select>
                    <span class="text-danger" asp-validation-for="CustomerID"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="ProductID">Product:</label>
                    <select asp-for="ProductID" class="form-control select2"
                            asp-items="@(new SelectList(
                                ViewBag.Products, "ProductID", "Name", Model.ProductID.ToString() ))">
                        <option value="">Select A Product...</option>
                    </select>
                    <span class="text-danger" asp-validation-for="ProductID"></span>
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Title">Title</label>
                    <input class="form-control" asp-for="Title" />
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Description">Description</label>
                    <textarea class="form-control" asp-for="Description" rows="4"></textarea>
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="DateOpened">Data Opened</label>
                    <input class="form-control" asp-for="DateOpened" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="DateClosed">Date Closed</label>
                    <input class="form-control" asp-for="DateClosed" />
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="TechnicianID">Technician</label>
                    <select asp-for="TechnicianID" class="form-control select2"
                            asp-items="@(new SelectList(ViewBag.Technicians,
                                                        "TechnicianID", "FullName", Model.TechnicianID.ToString()))">
                        <option value="">Assign A Technician...</option>
                    </select>
                </div>
            </div>
        </div>

        <input type="hidden" asp-for="IncidentID" />

        <div class="row mb-3">
            <div class="col-md-12">
                <button class="btn btn-primary" type="submit">Save</button>
                <a class="btn btn-primary" asp-controller="Incident" asp-action="List">Cancel</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.select2').select2();
        });
    </script>
}
